{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileDirname}/${fileBasenameNoExtension}",  // Path to your executable
            "args": [],  // Command line arguments, if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",  // Use the task defined in tasks.json
            "miDebuggerPath": "/usr/bin/gdb",  // Modify this path to your gdb executable
            "stopAtEntry": false,
            "preLaunchTask": "build",
            "externalConsole": false,
            "program": "${workspaceFolder}/${fileDirname}/${fileBasenameNoExtension}",
        }
    ]
}
